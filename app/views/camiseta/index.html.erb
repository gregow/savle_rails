<h1>Listing camiseta</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Medida 1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @camiseta.each do |camisetum| %>
      <tr>
        <td><%= camisetum.nome %></td>
        <td><%= camisetum.medida_1 %></td>
        <td><%= link_to 'Show', camisetum %></td>
        <td><%= link_to 'Edit', edit_camisetum_path(camisetum) %></td>
        <td><%= link_to 'Destroy', camisetum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

